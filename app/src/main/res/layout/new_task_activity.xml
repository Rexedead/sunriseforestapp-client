<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="?listPreferredItemPaddingLeft"
    android:paddingEnd="?listPreferredItemPaddingRight"
    tools:context=".ui.NewTaskActivity"
    >


    <TextView
        android:id="@+id/newTask_text_textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="start|center"
        android:text="@string/newTask_text"
        android:textSize="12sp"
        tools:text="Задача" />

    <EditText
        android:id="@+id/newTask_description_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTask_text_textView"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:background="@color/field_background"
        android:ems="10"
        android:gravity="top|start"
        android:hint="@string/newTask_description"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:textSize="14sp" />

    <View
        android:id="@+id/centerShim"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/newTask_startDate_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTask_description_editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/centerShim"
        android:background="@color/field_background"
        android:ems="10"
        android:focusable="false"
        android:textAlignment="center"
        android:textSize="14sp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newTask_startDate_TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/newTask_startDate"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newTask_endDate_textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTask_description_editText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/centerShim"
        android:background="@color/field_background"
        android:focusable="false"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="14sp"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newTask_endDate_TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/newTask_endDate"
            android:textSize="14sp" />
    </android.support.design.widget.TextInputLayout>


    <EditText
        android:id="@+id/newTask_reward_editText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/newTask_startDate_textInputLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/centerShim"
        android:background="@color/field_background"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="@string/newTask_reward"
        android:maxLength="10"
        android:digits="1234567890"
        android:inputType="number"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/newTask_client_TextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/newTask_reward_editText"
        android:gravity="start|center"
        android:text="@string/newTask_client"
        android:textSize="12sp"
        tools:text="Клиент" />


    <EditText
        android:id="@+id/newTask_clientName_editText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/newTask_client_TextView"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/centerShim"
        android:background="@color/field_background"
        android:ems="10"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="@string/newTask_clientName"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/newTask_clientPhone_editText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/newTask_client_TextView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/centerShim"
        android:background="@color/field_background"
        android:hint="@string/newTask_phone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:digits="1234567890+-() "
        android:inputType="phone"
        android:textSize="14sp" />

    <Button
        android:id="@+id/newTask_add_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="@string/newTask_add"
        android:textSize="12sp" />


</RelativeLayout>