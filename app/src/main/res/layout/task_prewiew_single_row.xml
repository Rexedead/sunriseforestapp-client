<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:clickable="true"
    android:focusable="true"
  >

    <ImageView
        android:id="@+id/taskdesk_imageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="0dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:contentDescription="taskdesk_image" />

    <TextView
        android:id="@+id/task_data_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="task_data"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/task_id_recycle_textView"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/task_id_recycle_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="task_id"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/taskdesk_imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="task_time"
        android:id="@+id/task_date_textView"
        android:textSize="10sp"
        android:layout_below="@+id/task_id_recycle_textView"
        android:layout_alignRight="@+id/task_data_textView"
        android:layout_alignEnd="@+id/task_data_textView" />

</RelativeLayout>