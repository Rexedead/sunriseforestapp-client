<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="?listPreferredItemPaddingLeft"
    android:paddingTop="@dimen/padding_list_row"
    android:paddingEnd="?listPreferredItemPaddingRight"
    android:paddingBottom="@dimen/padding_list_row">

    <TextView
        android:id="@+id/taskSingleRow_description_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/taskSingleRow_status_imageView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true" />




        <TextView
            android:id="@+id/taskSingleRow_reward_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskSingleRow_description_textView"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskSingleRow_creationDate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskSingleRow_description_textView"
            android:layout_toEndOf="@id/taskSingleRow_reward_textView"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:text="@string/recycler_creationDate"
            android:textColor="@color/recycler_date"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/taskSingleRow_startDate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskSingleRow_description_textView"
            android:layout_toEndOf="@id/taskSingleRow_creationDate_get_textView"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:text="@string/recycler_startDate"
            android:textColor="@color/recycler_date"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/taskSingleRow_endDate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/taskSingleRow_description_textView"
            android:layout_toEndOf="@id/taskSingleRow_startDate_get_textView"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:paddingEnd="10dp"
            android:text="@string/recycler_endDate"
            android:textColor="@color/recycler_date"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/taskSingleRow_creationDate_get_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskSingleRow_reward_textView"
            android:layout_toEndOf="@+id/taskSingleRow_reward_textView"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/recycler_date"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/taskSingleRow_startDate_get_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskSingleRow_reward_textView"
            android:layout_toEndOf="@+id/taskSingleRow_creationDate_get_textView"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/recycler_date"
            android:textSize="12sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/taskSingleRow_endDate_get_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskSingleRow_reward_textView"
        android:layout_toEndOf="@+id/taskSingleRow_startDate_get_textView"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/recycler_date"
        android:textSize="12sp"
        android:textStyle="bold" />




</RelativeLayout>