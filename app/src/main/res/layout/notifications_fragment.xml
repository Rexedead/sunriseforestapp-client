<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.NotificationsFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/notifications_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:layout_above="@+id/turn_notifications"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="80dp"
        android:scrollbars="vertical"/>
    <Button
        android:id="@+id/delete_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="удалить уведомления"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/turn_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="включить уведомления"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>