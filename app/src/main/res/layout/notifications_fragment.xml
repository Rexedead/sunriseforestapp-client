<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="56dp"
 >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/turn_notifications"
        android:scrollbars="vertical"/>

    <View
        android:id="@+id/centerShim"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/delete_notifications"
        style="@style/BtnDanger"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifications_recyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/remove_notifications"
        />

    <Button
        android:id="@+id/turn_notifications"
        style="@style/BtnInfo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:text="Включить уведомления"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"

        />


</RelativeLayout>